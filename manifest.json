{
  "name": "PPM Assistant",
  "description": "Extends PPM with usefull comparisons, skill calculations etc",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "128": "icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/icons/star-diamond.svg",
        "src/icons/star-gold.svg",
        "src/icons/star-silver.svg",
        "src/icons/star-empty.svg"
      ],
      "matches": ["https://hockey.powerplaymanager.com/*"],
      "use_dynamic_url": true
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://hockey.powerplaymanager.com/*"],
      "css": ["styles.css"],
      "js": ["dist/main.js"]
    }
  ],
  "permissions": ["storage"]
}
